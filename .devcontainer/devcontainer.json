{
  "name": "Locality Connect Dev",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "postCreateCommand": "git clone https://github.com/prasantKumarP/locality-connect-backend.git ../locality-connect-backend",
  "forwardPorts": [3000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Locality Connect Frontend",
      "onAutoForward": "openBrowser"
    },
    "8080": {
      "label": "Locality Connect Backend"
    }
  }
}
